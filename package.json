{
	"name": "@joaquimserafim/utils-lib",
	"version": "2.2.1",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"type": "module",
	"files": [
		"README.md",
		"build/**/*"
	],
	"scripts": {
		"build": "rm -rf build && tsc -p tsconfig.build.json",
		"watch": "tsc -w",
		"test": "tsc --noEmit && ava",
		"lint": "eslint . --ext .ts --fix",
		"format": "prettier --write --check 'src/**/*.ts' 'src/**/*.test.ts'",
		"check": "tsc",
		"ci": "npm run test && npm run format && npm run lint",
		"prepare": "husky install && npm run build"
	},
	"devDependencies": {
		"@kamoa/tsconfig": "^1.0.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/aws-lambda": "^8.10.103",
		"@types/node": "18.7.16",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"ava": "^4.3.3",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-ava": "^13.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"nock": "^13.2.9",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	},
	"author": "@joaquimserafim",
	"license": "ISC",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.165.0",
		"@aws-sdk/lib-dynamodb": "^3.165.0",
		"@aws-sdk/util-dynamodb": "^3.165.0",
		"got": "^12.5.1"
	},
	"ava": {
		"files": [
			"src/**/*.test.ts"
		],
		"timeout": "1m",
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"failWithoutAssertions": true,
		"failFast": true
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es2020": true
		},
		"plugins": [
			"ava"
		],
		"parser": "@typescript-eslint/parser",
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"parserOptions": {
			"sourceType": "module"
		},
		"rules": {
			"no-console": [
				"error"
			],
			"no-debugger": [
				"error"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"semi": [
				"error",
				"always"
			],
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": [
				"error"
			],
			"no-prototype-builtins": "off"
		}
	},
	"engines": {
		"node": ">=16"
	}
}
