{
	"name": "@joaquimserafim/utils-lib",
	"version": "2.12.0",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": ["README.md", "build/**/*"],
	"scripts": {
		"build": "rm -rf build && tsc -p tsconfig.build.json",
		"watch": "tsc -w",
		"test": "NO_LOG=true jest --silent --runInBand",
		"test:v": "jest --runInBand",
		"test:vv": "jest --verbose --runInBand",
		"test:w": "jest --watchAll --runInBand",
		"lint": "eslint . --ext .ts --fix",
		"format": "prettier --write --check 'src/**/*.ts' 'src/**/*.test.ts'",
		"check": "tsc",
		"ci": "npm run test && npm run format && npm run lint",
		"prepare": "husky install && npm run build"
	},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.108",
		"@types/jest": "^29.2.3",
		"@types/node": "18.11.9",
		"@types/node-fetch": "^2.6.2",
		"@types/ramda": "^0.28.20",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.2",
		"jest": "29.3.1",
		"nock": "^13.2.9",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"author": "@joaquimserafim",
	"license": "ISC",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.212.0",
		"@aws-sdk/client-sns": "^3.212.0",
		"@aws-sdk/client-sqs": "^3.212.0",
		"@aws-sdk/lib-dynamodb": "^3.212.0",
		"@aws-sdk/util-dynamodb": "^3.212.0",
		"abort-controller": "^3.0.0",
		"node-fetch": "2",
		"ramda": "^0.28.0"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"jest": true,
			"es2020": true
		},
		"parser": "@typescript-eslint/parser",
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"parserOptions": {
			"sourceType": "module"
		},
		"rules": {
			"no-console": ["error"],
			"no-debugger": ["error"],
			"linebreak-style": ["error", "unix"],
			"semi": ["error", "always"],
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": ["error"],
			"no-prototype-builtins": "off"
		}
	},
	"engines": {
		"node": ">=16"
	}
}
